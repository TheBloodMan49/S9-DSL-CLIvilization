{
    "name": "vscode-CLIvilization",
    "description": "The extension specific package",
    "version": "0.0.1",
    "displayName": "CLIvilization",
    "type": "module",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "clivilization",
            "aliases": ["CLIvilization", "clivilization"],
            "extensions": [".civ"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "clivilization",
            "scopeName": "source.clivilization",
            "path": "syntaxes/clivilization.tmLanguage.json"
        }]
    },
    "activationEvents": [
        "onLanguage:clivilization"
    ],
    "main": "./out/extension/main.cjs",
    "scripts": {
        "clean": "shx rm -fr *.tsbuildinfo out syntaxes",
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "build:prepare": "shx mkdir -p ./syntaxes/ && shx cp -f ../language/syntaxes/clivilization.tmLanguage.json ./syntaxes/clivilization.tmLanguage.json",
        "build": "npm run build:prepare && tsc -b tsconfig.json && node esbuild.mjs",
        "build:clean": "npm run clean && npm run build",
        "watch": "npm run build:prepare && concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.json --watch\" \"node esbuild.mjs --watch\"",
        "esbuild-base": "esbuild ./src/extension/main.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node"
    },
    "dependencies": {
        "clivilization-language": "0.0.1",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "~1.67.0",
        "concurrently": "~8.2.1",
        "esbuild": "~0.25.5"
    },
    "vsce": {
      "dependencies": false
    }
}
